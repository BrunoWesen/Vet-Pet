#:import ku kivy.utils.get_color_from_hex

<Linha@Widget>
    canvas:
        Color:
            rgba: ku("#4A696E")
        Rectangle:
            size: 200, 3
            pos: self.pos

<Box>
    canvas.before:
        Color:
            rgba: self.cor

        RoundedRectangle:
            radius: [20]
            size: self.size
            pos: self.pos

